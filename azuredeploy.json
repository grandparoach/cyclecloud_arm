{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "outputs": {
        "fqdn": {
            "value": "[reference(variables('cycleIPName')).dnsSettings.fqdn]",
            "type": "string"
        },
        "ipaddress": {
            "value": "[reference(variables('cycleIPName')).ipAddress]",
            "type": "string"
        }
    },
    "parameters": {
        "tenantId": {
            "maxLength": 36,
            "metadata": {
                "description": "Azure Tenant ID"
            },
            "type": "string"
        },
        "applicationId": {
            "maxLength": 36,
            "metadata": {
                "description": "The Application ID of the Service Principal"
            },
            "type": "string"
        },
        "applicationSecret": {
             "maxLength": 128,
             "metadata": {
                 "description": "The Application Secret of the Service Principal"
             },
             "type": "securestring"
         },
        "SSH_Public_Key": {
            "metadata": {
                "description": "The SSH public key to access the VMs."
            },
            "type": "string"
        },
        "username": {
             "maxLength": 32,
             "type": "string",
             "metadata": {
               "description": "The username for logging into the VM"
             }
         },
        "cyclecloudVmSize": {
            "maxLength": 36,
            "metadata": {
                "description": "VM Size for the CycleCloud server"
            },
            "defaultValue": "Standard_D3_v2",
            "type": "string"
        },                 
        "cyclecloudVmStorage": {
            "maxLength": 32,
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS"
            ],            
            "metadata": {
                "description": "Type of storage for the CycleCloud VM: Premium_LRS or Standard_LRS"
            }
        },
        "cyclecloudVersion": {
            "maxLength": 32,
            "metadata": {
                "description": "CycleCloud Software Version to install"
            },
            "defaultValue": "latest",
            "allowedValues": [
                "latest",
                "7.8.0",
                "7.7.5",
                "7.7.4",
                "7.7.3",
                "7.7.2",
                "7.7.1",
                "7.6.1",
                "7.6.0"
           ],
            "type": "string"
        },
        "azureSovereignCloud": {
            "maxLength": 36,
            "metadata": {
                "description": "Azure National Cloud to use."
            },
            "defaultValue": "public",
            "allowedValues": [
                "public",
                "china",
                "germany",
                "usgov"
            ],
            "type": "string"
        },
        "existingVNetName": {
          "type": "string",
          "defaultValue": "POC-Network",
          "metadata": {
            "description": "name of existing Virtual Network"
          }
        },
        "existingVNetResourceGroup": {
          "type": "string",
           "defaultValue": "POC-ResourceGroup",
          "metadata": {
            "description": "name of Resource Group where the existing Virtual Network resides"
          }
        },
        "existingSubnetName": {
          "type": "string",
          "defaultValue": "POC-Subnet",
          "metadata": {
            "description": "name of Subnet on existing Virtual Network"
          }
        },
        "storageAccountLocation": {
            "maxLength": 36,
            "metadata": {
                "description": "Name of storage account to use for Azure CycleCloud storage"
            },
            "defaultValue": "",
            "type": "string"
        }
    },
    "resources": [
        
        {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('cycleNsgName')]",
        "apiVersion": "[variables('networkApiVersion')]",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "securityRules": [
            {
                "name": "AllowSecuredCyclePortalInBound",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "443",
                "sourceAddressPrefix": "Internet",
                "destinationAddressPrefix": "VirtualNetwork",
                "access": "Allow",
                "priority": 2000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            },
            {
                "name": "AllowCyclePortalInBound",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "80",
                "sourceAddressPrefix": "Internet",
                "destinationAddressPrefix": "VirtualNetwork",
                "access": "Allow",
                "priority": 1000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            },
            {
                "name": "default-allow-ssh",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 3000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            }
            ]
        },
        "dependsOn": []
        },
        
        {
            "apiVersion": "[variables('computeApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('cycleName')]",
            "identity": {
                "type": "systemAssigned"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('cyclecloudVmSize')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "adminUsername": "[parameters('username')]",
                    "computerName": "[variables('cycleName')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[parameters('SSH_Public_Key')]",
                                    "path": "[variables('authorizedKeyFile')]"
                                }
                            ]
                        }
                    },
                    "secrets": []
                },
                "storageProfile": {
                    "dataDisks": [
                        {
                            "caching": "ReadOnly",
                            "createOption": "Empty",
                            "diskSizeGB": 128,
                            "lun": 0,
                            "managedDisk": {
                                "storageAccountType": "[parameters('cyclecloudVmStorage')]" 
                            }
                        }
                    ],
                    "imageReference": {
                        "offer": "CentOS",
                        "publisher": "OpenLogic",
                        "sku": "7.3",
                        "version": "latest"
                    },
                    "osDisk": {
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('cyclecloudVmStorage')]"
                        },
                        "osType": "Linux"
                    }
                }
            },
            "resources": [
                {
                    "apiVersion": "[variables('computeApiVersion')]",
                    "dependsOn": [
                        "[variables('cycleName')]"
                    ],
                    "location": "[resourceGroup().location]",
                    "name": "InstallCycle",
                    "properties": {
                        "autoUpgradeMinorVersion": true,
                        "protectedSettings": {
                            "commandToExecute": "[concat('python cyclecloud_install.py ', ' --applicationSecret ', '\"', parameters('applicationSecret'), '\"', ' --applicationId ', '\"', parameters('applicationId'), '\"', ' --tenantId ', '\"', parameters('tenantId'), '\"', ' --azureSovereignCloud ', '\"', parameters('azureSovereignCloud'), '\"', ' --downloadURL ', '\"', variables('cycleDownloadURL'), '\"', ' --cyclecloudVersion ', '\"', parameters('cyclecloudVersion'),  '\"', ' --username ', '\"', parameters('username'), '\"', ' --hostname ', '\"', reference(variables('cycleIPName')).dnsSettings.fqdn, '\"', ' --storageAccount ', '\"', parameters('storageAccountLocation'), '\"')]"
                        },
                        "publisher": "Microsoft.Azure.Extensions",
                        "settings": {
                            "fileUris": ["[variables('installScriptURL')]"]
                        },
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0"
                    },
                    "type": "extensions"
                }
            ],
            "type": "Microsoft.Compute/virtualMachines"
        },
        {
            "apiVersion": "[variables('networkApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('cycleNsgName'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('cycleNic')]",
            "properties": {
                "dnsSettings": {},
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('SubnetRef')]"
                            }
                            
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('cycleNsgName'))]"
                },
                "primary": true
            },
            "type": "Microsoft.Network/networkInterfaces"
        }
    ],
    "variables": {
        "computeApiVersion": "2017-03-30",
        "authorizedKeyFile": "[concat('/home/', parameters('username'),'/.ssh/authorized_keys')]",
        "cycleDownloadURL": "https://cyclecloudarm.azureedge.net/cyclecloudrelease",
        "cycleName": "cyclecloud",
        "cycleNic": "cycle-nic",
        "cycleNsgName": "cycle-nsg",
        "cycleIPName": "cycle-ip",
        "installScriptURL": "[concat(variables('cycleDownloadURL'), '/', parameters('cyclecloudVersion'), '/cyclecloud_install.py')]",
        "namingInfix": "[toLower(take(uniqueString(subscription().subscriptionId, resourceGroup().id), 6))]",
        "networkApiVersion": "2017-06-01",
        "resourceLocation": "[resourceGroup().location]",
        "vnetID": "[resourceId(parameters('existingVNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('existingVNetName'))]",
        "SubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('existingSubnetName'))]"
    }
}
